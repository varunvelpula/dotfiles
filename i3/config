# My additions to the config file
# set this to display somthing cool
exec terminator
exec spotify

# Audio controls
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%-
bindsym XF86AudioMute exec amixer set Master toggle

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Assign workspaces to particular apps
assign [class="Spotify"] $ws10

# window colors
#                       border              background          text                   indicator
client.focused          $bg-color           $bg-color           $text-color            #00ff00
client.unfocused        $inactive-bg-color  $inactive-bg-color  $inactive-text-color   #00ff00
client.focused_inactive $inactive-bg-color  $inactive-bg-color  $inactive-text-color   #00ff00
client.urgent           $urgent-bg-color    $urgent-bg-color    $text-color            #00ff00

#picom
# exec_always --no-startup-id picom -b -f --blur-method gaussian --corner-radius 30
exec --no-startup-id picom --config ~/.config/picom/picom.conf -b

#rofi
bindsym $super+Return exec --no-startup-id ~/.config/rofi/launchers/type-3/launcher.sh
bindsym $super+x exec --no-startup-id powermenu_t2


# Keybinding to lock screen
bindsym $super+l exec i3lock -i /home/varunvelpula/Pictures/fractal.png
bindsym $super+Shift+l exec i3lock -i /home/varunvelpula/Pictures/fractal.png & systemctl suspend


# Take a screenshot
bindsym Print exec scrot '/home/varunvelpula/Pictures/Screenshot_%a-%d%b%y_%H.%M.png' -e 'xdg-open ~/$f'


# window rules, you can find the window class using xprop
for_window [class=Eog|Sxiv|feh|mpv|Vlc|File-roller|Xarchiver] floating enable
for_window [class=Eog|Sxiv|feh|mpv|Vlc|File-roller|Xarchiver] focus
for_window [class=".*"] border pixel 5
hide_edge_borders smart
gaps inner 5
smart_gaps on
